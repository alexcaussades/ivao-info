{
  "name": "ivao-info-tracker",
  "productName": "IVAO Info Tracker",
  "version": "0.6.0",
  "versionName": "Alpha",
  "description": "Ivao Info Tracker is a simple app to track your flight and atc on IVAO",
  "main": "src/js/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make:linux": "electron-forge make --platform=linux --arch=x64 --icon=src/assets/icon.png",
    "make:appimage": "electron-forge make --platform=linux --arch=x64 --make-options='-p never' --icon=src/assets/icon.png",
    "make:dmg": "electron-forge make --platform=darwin --arch=x64 --make-options='-p never' --icon=src/assets/icon.png",
    "publish": "electron-forge publish",
    "update": "ncu -u",
    "lint": "echo \"No linting configured\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alexcaussades/ivao-info"
  },
  "bugs": {
    "url": "https://github.com/alexcaussades/ivao-info/issues"
  },
  "keywords": [
    "ivao",
    "info",
    "tracker",
    "electron",
    "nodejs"
  ],
  "author": {
    "name": "alexcaussades",
    "email": "alexcaussades@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^1.1.3",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^4.6.5"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.1",
    "@electron-forge/maker-deb": "^6.0.1",
    "@electron-forge/maker-rpm": "^6.0.1",
    "@electron-forge/maker-squirrel": "^6.0.1",
    "@electron-forge/maker-zip": "^6.0.1",
    "electron": "^21.2.2"
  }
}
